{
    "name": "backend-task",
    "version": "1.0.0",
    "description": "repo to showcase my backend skills",
    "author": "Nishit Jain <nishitj077@gmail.com>",
    "license": "MIT",
    "keywords": [
        "node",
        "express",
        "mysql",
        "sequelize"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/midnight077/backend-task.git"
    },
    "homepage": "https://github.com/midnight077/backend-task#readme",
    "bugs": {
        "url": "https://github.com/midnight077/backend-task/issues"
    },
    "main": "src/index.js",
    "type": "module",
    "scripts": {
        "prepare": "husky",
        "lint": "eslint ./ --ignore-path .gitignore",
        "lint:fix": "eslint ./ --fix --ignore-path .gitignore",
        "format": "prettier ./ --write --ignore-path .gitignore",
        "format:check": "prettier ./ --check --ignore-path .gitignore",
        "build": "webpack --progress --config webpack.config.js",
        "prod": "npm run build && cross-env NODE_ENV=production node ./dist/app.cjs",
        "dev": "cross-env NODE_ENV=development nodemon ./src/index.js",
        "start": "npm run dev"
    },
    "dependencies": {
        "dotenv": "^16.4.5",
        "express": "^4.18.3",
        "winston": "^3.12.0"
    },
    "devDependencies": {
        "@babel/core": "^7.18.13",
        "@babel/preset-env": "^7.18.10",
        "@dotenvx/dotenvx": "^0.24.0",
        "babel-loader": "^8.2.5",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "nodemon": "^3.1.0",
        "prettier": "^3.2.5",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-node-externals": "^3.0.0"
    }
}
